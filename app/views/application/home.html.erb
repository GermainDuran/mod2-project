<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <header>
    <% if session[:user_id] %>
      <%= link_to "Profile", user_path(User.find session[:user_id]) %>
      <%= form_tag '/logout', method:"delete" do %>
        <%= submit_tag "Logout" %>
      <% end %>
    <% else %>
      <%= form_tag '/login', method:"get" do %>
        <%= submit_tag "Login" %>
      <% end %>
    <% end %>

    <%= form_tag '/search', method: "get" do %>
      <%= label_tag :q,"Search for phrases:" %>
      <%= text_field_tag :q %>
      <%= submit_tag "Search!" %>
    <% end %>

  </header>
  <body>

    <% if !@category %>
      <div class="">
        <%= form_tag '/phrases/categorize',method: "post" do %>
          <p>Categorize Terms by:</p>
          <select class="" name="category">
            <option value="region">Region</option>
            <option value="state">State</option>
          </select>
          <%= submit_tag "Categorize!" %>
        <% end %>
      </div>

    <% else %>
      <%= render 'categorize' %>
    <% end %>
  </body>
</html>
