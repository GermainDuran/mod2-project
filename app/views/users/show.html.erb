<h1><%= @user.username %></h1>

<h3>Submitted Phrases</h3>

<% if !@user.phrases.empty? %>
  <ul>
    <%= @user.phrases.each do |phrase| %>
      <li><%= phrase.content %></li>
    <% end %>
  </ul>
<% end %>

<% if session[:user_id] == @user.id %>
  <form action="/phrases/new" method="get">
    <input type="submit" value="New Phrase">
  </form>
<% end %>
