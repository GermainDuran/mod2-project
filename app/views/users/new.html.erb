<div class="outer-box new-user">

  <h1 class="title">Sign Up</h1>
  <%= form_for @user do |f| %>

      <%= f.text_field :username, class: "field", placeholder: "Username" %>


      <div class="error-message">
        <% if @user.errors[:username] %>
          <%= @user.errors[:username].first %>
        <% end %>
        <br>
      </div>


      <%= f.password_field :password, class: "field", placeholder: "Password" %>

    <div class="error-message">
      <% if @user.errors[:password] %>
        <%= @user.errors[:password].first %>
      <% end %>
      <br>
    </div>

      <%= f.password_field :password_confirmation, class: "field", placeholder:"Confirm Password" %>

    <div class="error-message">
      <% if @user.errors[:password_confirmation] %>
        <%= @user.errors[:password_confirmation].first %>
      <% end %>
      <br>
    </div>

    <div class="button-box">

      <%= f.submit "Create New User",class:"button-text submit-button new-user-button" %>

    </div>

  <% end %>
</div>
