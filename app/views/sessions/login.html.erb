<h1>Login WIT DAT INFO DOE</h1>


<fieldset>
  <% if flash[:errors] %>
    <div class="error_message">
      <em><%= flash[:errors] %></em>
    </div>
    <% flash[:errors] = nil %>
  <% end %>

  <%= form_tag ('/login') do %>
    <%= label_tag "Enter Username and Password" %><br>
    <%= text_field_tag :username %><br>

    <%= password_field_tag :password %><br>
    <%= submit_tag "Log In!" %>
  <% end %>

  <p>Don't have a username?
  <%= link_to "Sign Up!", new_user_path %></p>
</fieldset>
