<div class="outer-box login-box">


<h1 class="title">Login</h1>

  <% if flash[:errors] %>
    <div class="error-message">
      <em><%= flash[:errors] %></em>
    </div>
    <% flash[:errors] = nil %>
  <% end %>

  <%= form_tag ('/login') do %>

    <p><%= text_field_tag :username,nil, class:"field", placeholder:"Username" %></p><br>

    <p><%= password_field_tag :password, nil, class:"field", placeholder:"Password" %></p><br>

      <%= submit_tag "Log In!",class:"button-text submit-button login-button" %>

  <% end %>
<br>
  <p class="bottom-text">Don't have a username?
  <%= link_to "Sign Up!", new_user_path %></p>

</div>
